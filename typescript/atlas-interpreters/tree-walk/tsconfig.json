{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@src/types/*": ["./src/types/*"],
      "@src/types": ["./src/types/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
